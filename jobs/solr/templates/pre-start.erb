#!/bin/bash

export LOG_DIR=/var/vcap/sys/log/solr
export RUN_DIR=/var/vcap/sys/run/solr
export STORE_DIR=/var/vcap/store/solr
export DATA_DIR=/var/vcap/data/solr
export TMP_DIR=/var/vcap/data/solr/tmp

for dir in $LOG_DIR $RUN_DIR $DATA_DIR $STORE_DIR $TMP_DIR;do
  mkdir -p ${dir}
  chown vcap:vcap ${dir}
  chmod 700 ${dir}
done

#cp  /var/vcap/jobs/solr/config/myid ${STORE_DIR}/

chown -R vcap:vcap ${STORE_DIR}
